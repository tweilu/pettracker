/* CALENDAR WIDGET */
.calendar h3 {
  margin-top: 0px;
}
.fc-header-right {
  display:none;
}
.fc-header-title h2 {
  font-size: 1.5em;
}
.fc-button-today {
  display:none!important;
}
.fc-event {
  height:10px;
}
.fc-event:hover {
  cursor:pointer;
  background-color: #307090;
}
.fc-event-title {
  display:none;
}
.fc-day-number {
  font-size: .7em;
}
#event-info {
  background-color: #fff;
  display:none;
  z-index:10;
  border: 1px solid #bdbdbd;
  box-shadow: 0px 0px 3px #999;
}
#event-info-content {
  margin:5px;
  margin-right:20px;
}
#event-info .glyphicon-trash {
  padding:5px;
}
#close-event-info {
  position:absolute;
  right:0;
  margin-right:5px;
}
#add-event {
  display:none;
  background-color: #fff;
  z-index:10;
  border: 1px solid #bdbdbd;
  box-shadow: 0px 0px 3px #999;
  padding:5px;
  padding-right:10px;
}
#add_event_form {
  margin:5px;
  margin-right: 20px
}
.cal-hover .fc-day:hover {
  background-color: #f5f5f5;
  border: 1px solid #4b9bc3;
  cursor:pointer;
}
.arrow_box {
  position: relative;
  background: #ffffff;
  border: 1px solid #bdbdbd;
}
.arrow_box:after, .arrow_box:before {
  bottom: 100%;
  left: 50%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}
.arrow_box:after {
  border-color: rgba(255, 255, 255, 0);
  border-bottom-color: #ffffff;
  border-width: 10px;
  margin-left: -10px;
}
.arrow_box:before {
  border-color: rgba(189, 189, 189, 0);
  border-bottom-color: #bdbdbd;
  border-width: 11px;
  margin-left: -11px;
}
#calendar-btns {
  float:right;
  padding-top:5px;
}
#calendar-pets p {
  font-size: .7em;
  padding-top: 8px;
  margin-right:5px;
}


