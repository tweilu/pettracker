<div class="col-sm-3 col-md-2 sidebar" id="sidebar" role="navigation">
  <div class="logo">
    <%= link_to image_tag('logo.png', width:"180"), static_pages_home_path, :class => 'logo-text' %>
    <%= link_to 'about', about_path, :class => 'about-link' %>
  </div>
  <ul class="nav nav-sidebar">

    <li class="category user-page">
      <%= link_to current_user.name, user_path(current_user) %>
    <li>
  </ul>
  <ul class="nav nav-sidebar">
    <li class="category my-pets"><%= link_to "My Pets", pets_path %></li>
    <% current_user.my_pets.sort_by!{ |m| m.name.downcase }.each do |pet| %>
      <li class="subcategory pet_<%= pet.id %>"><%= link_to pet.name, pet %></li>
    <% end %>
  </ul>
  <ul class="nav nav-sidebar">
    <li class ="category sitting-pets"><%= link_to "Pets I'm Sitting", pets_sitting_path %></li>
    <% current_user.sitting_pets.sort_by!{ |m| m.name.downcase }.each do |pet| %>
      <li class="subcategory pet_<%= pet.id %>"><%= link_to pet.name, pet %></li>
    <% end %>
  </ul>
  <ul class="nav nav-sidebar">
</div>