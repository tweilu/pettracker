if ('<%= @add %>') {
	$('#calendar').fullCalendar('renderEvent', {title:'<%= @event.name %>', start:'<%= @event.date %>', id:'<%= @event.id %>', time:'<%= @event.time %>', pet_name:'<%= @event.pets.first.name %>'}, true);
	$('#add-event').css({'display':'none'});
	$('#add-event-field').val('');
	$('#event-time-field').val('');
}
else {
	$('#add-event').css({'display':'none'});
	console.log("what's going on")
}