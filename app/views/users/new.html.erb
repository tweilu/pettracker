<style>
    html {
        background: url(/assets/dogbg.jpg) no-repeat;;
        background-position: top 80px;
    }
</style>
<% provide(:title, 'Sign up') %>
<div id="title" style="background-color: #0070BC; height: 80px; width: 100%;">
<span class="homespan" style="width: 250px;"><h1 style="color:white;"> Pet Tracker </h1></span>
<span class="homespan" style="right: 100px; width: 100px;"><%= link_to "Sign in", signin_path,:id => "signin" %></span>
<span class="homespan" style="width: 100px; right: 0px; background-color: #FFB504;"><%= link_to "Sign up", signup_path, :id => "signup" %></span>
</div>

<div style="background-color: #FFB504; width: 300px; padding: 20px; position: absolute; right: 0px;">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <span style="float: right; position:relative; right: 30px;">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </span><br/>

      <span style="float: right; position:relative; right: 30px;">
      <%= f.label :email %>
      <%= f.text_field :email %>
      </span><br/>

      <span style="float: right; position:relative; right: 30px;">
      <%= f.label :password %>
      <%= f.password_field :password %>
      </span><br/>

      <span style="float: right; position:relative; right: 30px;">
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      </span><br/>

      <span style="float: right; position: relative; right:30px;">
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      </span>
    <% end %>
  </div>
</div>
